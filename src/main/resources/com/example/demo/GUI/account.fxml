  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <AnchorPane prefHeight="482.0" prefWidth="708.0">
         <children>
            <ImageView fitHeight="324.0" fitWidth="327.0" layoutX="287.0" layoutY="56.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/animated_game.gif" />
               </image>
            </ImageView>
            <Label layoutX="287.0" layoutY="398.0" text="Enter username: ">
               <font>
                  <Font name="Tw Cen MT Bold" size="38.0" />
               </font></Label>
            <TextField fx:id="usernameField" layoutX="287.0" layoutY="443.0" prefHeight="43.0" prefWidth="327.0">
               <font>
                  <Font name="Tw Cen MT Bold" size="24.0" />
               </font></TextField>
            <Button fx:id="clearButton" layoutX="461.0" layoutY="502.0" mnemonicParsing="false" onAction="#clearField" prefHeight="43.0" prefWidth="150.0" text="Clear">
               <font>
                  <Font name="Tw Cen MT" size="19.0" />
               </font></Button>
            <Button fx:id="submitButton" layoutX="287.0" layoutY="502.0" mnemonicParsing="false" onAction="#switchToMenu" prefHeight="43.0" prefWidth="150.0" text="Submit">
               <font>
                  <Font name="Tw Cen MT" size="19.0" />
               </font></Button>
         </children>
      </AnchorPane>
   </children>
</GridPane>
